<!doctype html>
<html lang="es" data-layout="horizontal" data-topbar="dark" data-sidebar="light" data-sidebar-size="sm" data-sidebar-image="none" data-preloader="disable">
<head>
    @await Html.PartialAsync("~/Views/Shared/_title_meta.cshtml")
    @RenderSection("styles", required: false)
    @await Html.PartialAsync("~/Views/Shared/_head_css.cshtml")
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#2162d5">

</head>
<body>
    <!-- Begin page -->
    <div id="layout-wrapper">
        @await Html.PartialAsync("~/Views/Shared/_menu.cshtml")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
@*                     @await Html.PartialAsync("~/Views/Shared/_page_title.cshtml")
 *@
                    @RenderBody()
                </div>
            </div>
            @await Html.PartialAsync("~/Views/Shared/_footer.cshtml")
        </div>

    </div>
  @*   <!-- END layout-wrapper -->
    @Html.Partial("~/Views/Shared/_customizer.cshtml") *@

    @await Html.PartialAsync("~/Views/Shared/_vendor_scripts.cshtml")

    <script>
                if ('serviceWorker' in navigator) {
            window.addEventListener('load', function () {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(function (registration) {
                        console.log('Service Worker registrado con éxito:', registration.scope);
                    })
                    .catch(function (error) {
                        console.log('Error al registrar el Service Worker:', error);
                    });
            });
        }

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>